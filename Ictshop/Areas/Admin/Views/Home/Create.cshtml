@model Ictshop.Models.Sanpham



@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm sản phẩm mới</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <b class="control-label col-md-2" style=""> Tên sản phẩm</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tensp, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tensp, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2" style=""> Giá tiền</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Giatien, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Giatien, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2" style=""> Số lượng</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Soluong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Soluong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2" style=""> Mô tả</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2" style=""> Thẻ sim</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Thesim, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Thesim, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2" style=""> Bộ nhớ trong</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Bonhotrong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Bonhotrong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2" style=""> Sản phẩm mới</b>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Sanphammoi)
                    @Html.ValidationMessageFor(model => model.Sanphammoi, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2" style=""> Ram</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ram, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ram, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2" style=""> Ảnh bìa</b>
            <h2>Basic File Upload</h2>
            @using (Html.BeginForm("Index",
                         "Home",
                         FormMethod.Post,
                         new { enctype = "multipart/form-data" }))
            {
                <label for="file">Upload Image:</label>
                <input type="file" name="file" id="file" /><br><br>
                <input type="submit" value="Upload Image" />
                <br><br>
                @ViewBag.Message
            }

        </div>

        <div class="form-group">
            <b class="control-label col-md-2" style=""> Hãng điện thoại</b>
            <div class="col-md-10">
                @Html.DropDownList("Mahang", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Mahang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2" style=""> Hệ điều hành</b>
            <div class="col-md-10">
                @Html.DropDownList("Mahdh", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Mahdh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Về trang chủ", "Index")
</div>

